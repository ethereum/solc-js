const tape = require('tape');
const spawn = require('tape-spawn');

tape('CLI solcjs-get', function (t) {
  t.test('--list', function (st) {
    var spt = spawn(st, './solcjs-get --list');
    spt.stderr.empty();
    spt.succeeds();
    spt.end();
  });
	
  t.test('Get latest', function (st) {
    var spt = spawn(st, './solcjs-get');
    spt.stderr.empty();
    spt.succeeds();
    spt.end();
  });
});
